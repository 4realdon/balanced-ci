echo Build is: ${PP_BUILD}

<%- if @new_resource.build_command -%>
<%= @new_resource.build_command %>
<%- else -%>
sudo bash -xe <<BUILD
export PATH="/opt/ruby-210/bin:$PATH"
bundle install --binstubs --path vendor/bundle
rm -f pkg/<%= @new_resource.omnibus_package %>*
#export <%= @new_resource.omnibus_package.upcase.gsub(/-/, '_') %>_VERSION="$PP_BUILD"
bin/omnibus build project <%= @new_resource.omnibus_package %>
source /etc/depot.conf
depot -s s3://apt.vandelay.io -c precise -k 277E7787 --component=unstable pkg/<%= @new_resource.omnibus_package %>*.deb
BUILD
<%- end -%>
